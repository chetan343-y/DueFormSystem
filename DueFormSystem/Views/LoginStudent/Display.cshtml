
@{
    ViewBag.Title = "Display";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<style>
    .box {
        align-content: center;
        align-items: stretch;
        display: block;
        width: 100%;
        border: none;
        background-color: white;
        color: black;
        /*padding: 14px 28px;*/
        margin-block: 13px;
        padding: 20px;
        font-size: 17px;
        cursor: pointer;
        border-radius: 10px;
        box-shadow: 5px 5px #00ffff;
    }

    .block {
        margin: 15px;
        padding: 35px;
        border-radius: 10px;
        border-style: solid;
        border-color: black;
        background-color: #8914b2;
    }

    a {
        text-decoration: none;
    }

    h3 {
        margin: 15px;
        text-align: center;
    }

    .but1 {
        margin-top: 10px;
    }
</style>

<div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h3>Preview of Details</h3>
                <div class="block">
                    @{
                        var item = ViewBag.Part1 as List<string>;
                    }
                    <div class="box">
                        <b>Registration No:</b> @item[0]
                    </div>
                    <div class="box"><b>Email     :</b>&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;   @item[1]</div>
                    <div class="box"><b>Phone No.  :</b>&ensp;&emsp;&emsp;&emsp;&emsp;  @item[2]</div>
                    <div class="box"><b>Name         :</b>&nbsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;   @item[3]</div>
                    <div class="box"><b>Date of Birth:</b>&nbsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;   @item[4]</div>
                    <div class="box"><b>Branch         :</b>&nbsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;   @item[5]</div>
                    @{
                        var item1 = ViewBag.Part2 as List<string>;
                    }
                    <div class="box"><b>Gymkhana Fine  :</b>&nbsp;&emsp;&emsp;&emsp;&emsp;&emsp;  @item1[0]</div>


                    @{
                        var item3 = ViewBag.Part3 as List<string>;
                    }
                    <div class="box"><b>Student Pending Fee   :</b> &emsp;&emsp;&emsp;&emsp;  @item3[0] %</div>
                    <div class="box"><b>Remaining Dues   :</b> &emsp;&emsp;&emsp;&emsp;  @item3[1] %</div>

                    @{
                        var item5 = ViewBag.Part5 as List<string>;
                    }
                    <div class="box"><b>Pending Fees     : </b>  &emsp;&emsp;&emsp;&emsp;&emsp;&emsp; @item5[0]</div>
                    <div class="box"><b>Fine             : </b>  &emsp;&emsp;&emsp;&emsp;&emsp;&emsp; @item5[0]</div>

                    @{
                        var item6 = ViewBag.Part6 as List<string>;
                    }
                    <div class="box"><b>Library Pending Fine     : </b>  &emsp;&emsp;&emsp;&emsp;&emsp;&emsp; @item6[0]</div>

                    @{
                        var item7 = ViewBag.Part7 as List<string>;
                    }
                    <div class="box"><b>Scholarship Pending To Return To Student : </b>  emsp;&emsp; @item7[0]</div>


                    <div class="but1">
                        @Html.ActionLink("Pay Fees", "Pay", "LoginStudent", null, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
